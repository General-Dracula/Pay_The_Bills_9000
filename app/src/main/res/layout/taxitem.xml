<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/border_style"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/taxCost"
        android:layout_width="162dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:text="100000 DKK"
        android:textAlignment="center"
        android:textColor="#4DB6AC"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/taxValidText"
        android:layout_width="126dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/valid"
        android:textAlignment="center"
        android:textColor="#55BD59"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/taxCost"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/taxValability"
        android:layout_width="126dp"
        android:layout_height="26dp"
        android:text="2 Months"
        android:textAlignment="center"
        android:textColor="#4DD0E1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/taxDaysLeft"
        app:layout_constraintStart_toEndOf="@+id/taxDate"
        app:layout_constraintTop_toBottomOf="@+id/taxCost"
        app:layout_constraintVertical_bias="0.666" />

    <TextView
        android:id="@+id/taxDaysLeft"
        android:layout_width="109dp"
        android:layout_height="25dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="8dp"
        android:text="--- Days left"
        android:textAlignment="center"
        android:textColor="#4DB6AC"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <ImageButton
        android:id="@+id/taxItemDeleteButton"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:layout_marginEnd="8dp"
        android:background="#101010"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/taxDate"
        android:layout_width="106dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="12.12.2021"
        android:textAlignment="center"
        android:textColor="#64FFDA"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/taxValability"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taxCost" />

</androidx.constraintlayout.widget.ConstraintLayout>