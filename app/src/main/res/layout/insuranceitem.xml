<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/border_style"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/insurerer"
        android:layout_width="189dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Gigel Frone SRL"
        android:textColor="#536DFE"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/period"
        android:layout_width="187dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="12.12.2021 - 12.12.2022"
        android:textColor="#64FFDA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/insurerer"
        app:layout_constraintTop_toBottomOf="@+id/insurerer" />

    <TextView
        android:id="@+id/ammount"
        android:layout_width="157dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="8000 DKK"
        android:textAlignment="textEnd"
        android:textColor="#FF6E40"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toEndOf="@+id/insurerer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/validText"
        android:layout_width="88dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/valid"
        android:textAlignment="center"
        android:textColor="#55BD59"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toEndOf="@+id/period"
        app:layout_constraintTop_toBottomOf="@+id/ammount"
        app:layout_constraintVertical_bias="0.31" />
</androidx.constraintlayout.widget.ConstraintLayout>