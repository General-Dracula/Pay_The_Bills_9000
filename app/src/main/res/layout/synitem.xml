<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/border_style"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/synShop"
        android:layout_width="210dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Syn SRL"
        android:textStyle="bold"
        android:textColor="#536DFE"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateSyn"
        android:layout_width="101dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="12.12.2021"
        android:textColor="#64FFDA"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/synShop"
        app:layout_constraintTop_toBottomOf="@+id/synShop" />

    <TextView
        android:id="@+id/synValidText"
        android:layout_width="109dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:text="@string/valid"
        android:textAlignment="center"
        android:textColor="#55BD59"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.626"
        app:layout_constraintStart_toEndOf="@+id/synShop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.273" />

    <TextView
        android:id="@+id/synValability"
        android:layout_width="76dp"
        android:layout_height="24dp"
        android:text="2 Years"
        android:textColor="#4DD0E1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/synValidText"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toEndOf="@+id/dateSyn"
        app:layout_constraintTop_toBottomOf="@+id/synShop"
        app:layout_constraintVertical_bias="0.432" />

    <TextView
        android:id="@+id/synDaysLeft"
        android:layout_width="106dp"
        android:layout_height="26dp"
        android:text="--- Days left"
        android:textColor="#4DB6AC"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/synValability"
        app:layout_constraintTop_toBottomOf="@+id/synValidText" />
</androidx.constraintlayout.widget.ConstraintLayout>

